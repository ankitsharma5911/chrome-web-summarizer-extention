{
    "manifest_version": 3,
    "name": "Web Content Analyzer",
    "version": "1.0",
    "description": "Analyze web content with LangChain and LLM",
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "http://localhost:5000/*"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }